{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "{{TEAMS_APP_ID}}",
    "packageName": "com.variance.report",
    "developer": {
        "name": "Variance Report",
        "websiteUrl": "https://{{AZURE_STATIC_WEB_APP_URL}}",
        "privacyUrl": "https://{{AZURE_STATIC_WEB_APP_URL}}/privacy",
        "termsOfUseUrl": "https://{{AZURE_STATIC_WEB_APP_URL}}/terms"
    },
    "name": {
        "short": "Variance Report",
        "full": "Variance Report Generator"
    },
    "description": {
        "short": "Generate detailed P&L variance reports",
        "full": "Create professional P&L variance reports with detailed explanations using AI assistance"
    },
    "icons": {
        "outline": "outline.png",
        "color": "color.png"
    },
    "accentColor": "#FFFFFF",
    "configurableTabs": [
        {
            "configurationUrl": "https://{{AZURE_STATIC_WEB_APP_URL}}/config",
            "canUpdateConfiguration": true,
            "scopes": [
                "team",
                "groupchat"
            ]
        }
    ],
    "staticTabs": [
        {
            "entityId": "index",
            "name": "Variance Report",
            "contentUrl": "https://{{AZURE_STATIC_WEB_APP_URL}}",
            "websiteUrl": "https://{{AZURE_STATIC_WEB_APP_URL}}",
            "scopes": [
                "personal"
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "{{AZURE_STATIC_WEB_APP_URL}}"
    ]
} 