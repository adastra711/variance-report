{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "{{TEAMS_APP_ID}}",
    "packageName": "com.variance.report",
    "developer": {
        "name": "Variance Report",
        "websiteUrl": "https://{{YOUR_DOMAIN}}",
        "privacyUrl": "https://{{YOUR_DOMAIN}}/privacy",
        "termsOfUseUrl": "https://{{YOUR_DOMAIN}}/terms"
    },
    "name": {
        "short": "Variance Report",
        "full": "Variance Report Generator"
    },
    "description": {
        "short": "Generate detailed variance reports for P&L statements",
        "full": "Create and manage detailed variance reports with AI-powered descriptions for your monthly P&L statements."
    },
    "icons": {
        "outline": "outline.png",
        "color": "color.png"
    },
    "accentColor": "#FFFFFF",
    "configurableTabs": [
        {
            "configurationUrl": "https://{{YOUR_DOMAIN}}/config",
            "canUpdateConfiguration": true,
            "scopes": [
                "team",
                "groupchat"
            ]
        }
    ],
    "staticTabs": [
        {
            "entityId": "index",
            "name": "Variance Report",
            "contentUrl": "https://{{YOUR_DOMAIN}}",
            "websiteUrl": "https://{{YOUR_DOMAIN}}",
            "scopes": [
                "personal"
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "{{YOUR_DOMAIN}}"
    ]
} 